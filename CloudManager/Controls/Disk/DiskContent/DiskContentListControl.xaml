<UserControl
    x:Class="CloudManager.DiskContentListControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:CloudManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CloudManager"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="285.066"
    mc:Ignorable="d">
    <Grid DataContext="{x:Static local:DiskContentListDesignModel.Instance}">
        <ListView
            HorizontalContentAlignment="Stretch"
            Background="Transparent"
            ItemsSource="{Binding Items}"
             BorderThickness="0" ItemContainerStyle="{StaticResource RowItemListStyle}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:DiskContentListItemControl
                        Width="20"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
